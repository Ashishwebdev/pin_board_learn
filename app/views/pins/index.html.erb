<html>
<div id="pins" class="transitions-enabled masonry">
  <% @pin.each do |pin| %>
   <div class="box panel panel-default">
    <%= link_to (image_tag "#{pin.image}") %>
     <div class="panel-body">
     <%= pin.title %>
     </div>
     <%= link_to "Show", pin %>
     <% if user_signed_in? %>
        <%if pin.user == current_user %>
             <%= link_to "Edit", edit_pin_path(pin) %>
         <% end %>

      <% end %>

   </div>
  <% end %>
</div>
  </br>

  </html>